<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.finance.account_info.mapper.AccountInfoMarkerCustomMapper">

  <resultMap id="BaseResultMap" 
    type="demo.finance.account_info.pojo.po.AccountInfoMarker" 
    extends="demo.finance.account_info.mapper.AccountInfoMarkerMapper.BaseResultMap">
  </resultMap>
  
  <update id="updateAccountMarker">
    update 
      account_info_marker
    set
      marker = #{marker},
      update_time = now(),
      update_count = (update_count + 1)
    where
      account_id = #{accountId}
  </update>
  
  <select id="getMarkerByAccountId" resultMap="BaseResultMap">
  	select
      *
    from
      account_info_marker
    where
      account_id = #{accountId}
  </select>

  <insert id="insertCustom" parameterType="demo.finance.account_info.pojo.po.AccountInfoMarker">
    insert into account_info_marker (
      account_id, 
      create_time, 
      update_time, 
      update_count, 
      marker)
    values (
      #{accountId,jdbcType=INTEGER}, 
      now(), 
      now(), 
      0, 
      #{marker,jdbcType=CHAR})
  </insert>
  
</mapper>